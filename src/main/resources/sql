-- DROP TABLE
DROP TABLE member CASCADE CONSTRAINTS;
DROP TABLE post CASCADE CONSTRAINTS;
DROP TABLE post_skilltag CASCADE CONSTRAINTS;
DROP TABLE hashtag CASCADE CONSTRAINTS;
DROP TABLE image CASCADE CONSTRAINTS;
DROP TABLE applicant CASCADE CONSTRAINTS;
DROP TABLE user_post_like CASCADE CONSTRAINTS;
DROP TABLE question CASCADE CONSTRAINTS;
DROP TABLE answer CASCADE CONSTRAINTS;
DROP TABLE team CASCADE CONSTRAINTS;
DROP TABLE skill CASCADE CONSTRAINTS;

-- DROP SEQUENCE
DROP SEQUENCE post_seq;
DROP SEQUENCE post_skilltag_seq;
DROP SEQUENCE hashtag_seq;
DROP SEQUENCE image_seq;
DROP SEQUENCE applicant_id_seq;
DROP SEQUENCE user_post_like_seq;
DROP SEQUENCE question_seq;
DROP SEQUENCE answer_seq;
DROP SEQUENCE team_seq;
DROP SEQUENCE skill_seq;

--CREATE TABLE
CREATE TABLE member (
            member_id VARCHAR(30),
            password VARCHAR(50),
            name VARCHAR(10),
            nickname VARCHAR(20),
            point INT,
            company VARCHAR(50),
    memo VARCHAR(200),
            img VARCHAR(200),
            rdate date
);
CREATE TABLE post (
                      project_id INT,
                      title VARCHAR(100),
                      content VARCHAR(200),
                      member_id VARCHAR(30),
                      marketing INT,
                      plan INT,
                      design INT,
                      front INT,
                      server INT,
                      ref_link VARCHAR(200),
                      process INT,
                      rdate date,
                      img VARCHAR(200)
);


CREATE TABLE post_skilltag (
                               id INT,
                               post_id INT,
                               hashtag_id INT
);

CREATE TABLE hashtag (
                          hashtag_id INT,
                          hashtag VARCHAR(30)
);

CREATE TABLE image (
                       image_id INT,
                       file_name VARCHAR(200),
                       post_id INT
);

CREATE TABLE applicant (
                           member_id VARCHAR(30),
                           post_id INT,
                           apply_part INT,
                           pf CHAR(2),
                           rdate date,
                           progress INT,
                           score VARCHAR(10),
                           upvote VARCHAR(10)
);


CREATE TABLE user_post_like (
                                member_post_like_id INT,
                                member_id VARCHAR(30),
                                post_id INT
);

CREATE TABLE question (
                          question_id INT,
                          content VARCHAR(200),
                          post_id INT,
                          member_id VARCHAR(30),
                          rdate date
);

CREATE TABLE answer (
                        answer_id INT,
                        content VARCHAR(200),
                        member_id VARCHAR(30),
                        question_id INT,
                        rdate date
);


CREATE TABLE team (
                      team_id INT,
                      post_id INT,
                      member_id VARCHAR(30),
                      role VARCHAR(20),
                      progress INT,
                      score VARCHAR(10),
                      upvote VARCHAR(10)
);

CREATE TABLE skill (
                       member_skill_id INT,
                       member_id VARCHAR(30),
                       hashtag_id INT
);


-- CREATE SEQUENCE
CREATE SEQUENCE post_seq
    INCREMENT BY 1
    START WITH 1;

CREATE SEQUENCE post_skilltag_seq
    INCREMENT BY 1
    START WITH 1;

CREATE SEQUENCE hashtag_seq
    INCREMENT BY 1
    START WITH 1;

CREATE SEQUENCE image_seq
    INCREMENT BY 1
    START WITH 1;

CREATE SEQUENCE user_post_like_seq
    INCREMENT BY 1
    START WITH 1;

CREATE SEQUENCE question_seq
    INCREMENT BY 1
    START WITH 1;

CREATE SEQUENCE answer_seq
    INCREMENT BY 1
    START WITH 1;

CREATE SEQUENCE skill_seq
    INCREMENT BY 1
    START WITH 1;


